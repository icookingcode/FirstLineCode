<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.net.NetTechnologyActivity">

    <com.guc.firstlinecode.customviews.TitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发起请求，获取百度" />

    <Button
        android:id="@+id/btnRequestByOkHttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="okhttp访问：http://192.168.44.141:8099/get_data.xml" />

    <Button
        android:id="@+id/btnRequestJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="okhttp访问：http://192.168.44.141:8099/get_data.json" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>